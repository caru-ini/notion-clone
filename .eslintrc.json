{
  "extends": ["next/core-web-vitals", "plugin:tailwindcss/recommended", "plugin:react/jsx-runtime"],
  "plugins": ["prettier"],
  "rules": {
    "react/jsx-curly-brace-presence": [
      "warn",
      {
        "props": "always",
        "children": "never"
      }
    ],
    "prettier/prettier": "error",
    "tailwindcss/classnames-order": [
      "warn",
      {
        "callees": ["clsx", "cn", "twMerge"]
      }
    ]
  }
}
